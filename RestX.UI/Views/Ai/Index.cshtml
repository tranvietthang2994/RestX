<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
<script>
const aiContext = {
    ownerId: '@(ownerId?.ToString() ?? string.Empty)',
    tableId: @Html.Raw(tableId.HasValue ? tableId.Value.ToString() : "null")
};
const aiAvailableDishes = @Html.Raw(string.IsNullOrWhiteSpace(availableDishesJson) ? "[]" : availableDishesJson);

class AiChat {
    constructor() {
        this.currentMode = 'suggestion';
        this.conversationHistory = '';
        this.availableDishes = (aiAvailableDishes || []).map(dish => {
            const numericPrice = Number(dish.price);
            return {
                ...dish,
                numericPrice: Number.isFinite(numericPrice) ? numericPrice : null,
                normalizedName: (dish.name || '').toLowerCase()
            };
        });
        this.initializeElements();
        this.attachEventListeners();
        this.handleAddToCartClick = this.handleAddToCartClick.bind(this);
        document.addEventListener('click', this.handleAddToCartClick);
    }

    initializeElements() {
        this.chatMessages = document.getElementById('chatMessages');
        this.messageInput = document.getElementById('messageInput');
        this.sendButton = document.getElementById('sendButton');
        this.typingIndicator = document.getElementById('typingIndicator');
        this.modeButtons = document.querySelectorAll('.mode-btn');
        this.suggestionButtons = document.querySelectorAll('.suggestion-btn');
    }

    attachEventListeners() {
        // Send message
        this.sendButton.addEventListener('click', () => this.sendMessage());
        this.messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                this.sendMessage();
            }
        });

        // Auto-resize textarea
        this.messageInput.addEventListener('input', () => {
            this.messageInput.style.height = 'auto';
            this.messageInput.style.height = this.messageInput.scrollHeight + 'px';
        });

        // Mode toggle
        this.modeButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                this.modeButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                this.currentMode = btn.dataset.mode;
                this.updatePlaceholder();
            });
        });

        // Quick suggestions
        this.suggestionButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                this.messageInput.value = btn.dataset.text;
                this.messageInput.focus();
            });
        });
    }

    updatePlaceholder() {
        if (this.currentMode === 'suggestion') {
            this.messageInput.placeholder = 'Ví dụ: "Tôi muốn ăn đồ cay", "Món nào cho 2 người?"...';
        } else {
            this.messageInput.placeholder = 'Hỏi bất cứ điều gì về nhà hàng...';
        }
    }

    async sendMessage() {
        const message = this.messageInput.value.trim();
        if (!message) {
            return;
        }

        const isSuggestionMode = this.currentMode === 'suggestion';

        // Clear input
        this.messageInput.value = '';
        this.messageInput.style.height = 'auto';

        // Remove welcome message if exists
        const welcomeMsg = this.chatMessages.querySelector('.welcome-message');
        if (welcomeMsg) {
            welcomeMsg.remove();
        }

        // Add user message
        this.addMessage(message, 'user', { isSuggestion: isSuggestionMode });

        // Show typing indicator
        this.showTyping();

        // Disable send button
        this.sendButton.disabled = true;

        try {
            const response = await this.callAiApi(message, isSuggestionMode);
            this.hideTyping();
            this.addMessage(response, 'ai', { isSuggestion: isSuggestionMode });

            // Update conversation history
            this.conversationHistory += `User: ${message}\nAI: ${response}\n\n`;
        } catch (error) {
            this.hideTyping();
            this.addMessage('Xin lỗi, đã có lỗi xảy ra. Vui lòng thử lại sau. 😔', 'ai');
            console.error('AI error:', error);
        } finally {
            this.sendButton.disabled = false;
        }
    }

    async callAiApi(message, isSuggestionMode) {
        const endpoint = isSuggestionMode ? '/Ai/GetSuggestions' : '/Ai/Chat';
        const requestData = {
            message: message,
            conversationHistory: this.conversationHistory
        };

        if (aiContext.ownerId) {
            requestData.ownerId = aiContext.ownerId;
        }

        if (aiContext.tableId !== null) {
            requestData.tableId = aiContext.tableId;
        }

        const response = await fetch(endpoint, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(requestData)
        });

        if (!response.ok) {
            const errorText = await response.text();
            throw new Error(errorText || response.statusText);
        }

        const data = await response.json();

        if (data.success) {
            return data.response;
        }

        throw new Error(data.error || 'Unknown error');
    }

    addMessage(content, sender, options = {}) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `message ${sender}`;

        const avatar = document.createElement('div');
        avatar.className = 'message-avatar';
        avatar.textContent = sender === 'user' ? '👤' : '🤖';

        const messageContent = document.createElement('div');
        messageContent.className = 'message-content';
        messageContent.innerHTML = this.formatMessage(content, sender, options);

        if (sender === 'ai' && options.isSuggestion) {
            this.appendSuggestedDishButtons(messageContent, content);
        }

        messageDiv.appendChild(avatar);
        messageDiv.appendChild(messageContent);

        this.chatMessages.appendChild(messageDiv);
        this.scrollToBottom();
    }

    formatMessage(content, sender, options) {
        const rawText = content ?? '';

        if (sender === 'ai' && options.isSuggestion) {
            return this.formatSuggestion(rawText);
        }

        return this.escapeHtml(rawText).replace(/\n/g, '<br>');
    }

    formatSuggestion(rawContent) {
        if (!rawContent) {
            return '';
        }

        const paragraphs = rawContent
            .split(/\n\s*\n/)
            .map(paragraph => paragraph.trim())
            .filter(paragraph => paragraph.length > 0);

        if (paragraphs.length === 0) {
            return this.escapeHtml(rawContent).replace(/\n/g, '<br>');
        }

        return paragraphs
            .map(paragraph => `<p>${this.escapeHtml(paragraph).replace(/\n/g, '<br>')}</p>`)
            .join('');
    }

    formatPrice(price) {
        try {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
        } catch {
            return `${price?.toLocaleString?.('vi-VN') ?? price}đ`;
        }
    }

    escapeHtml(text) {
        if (text === null || text === undefined) {
            return '';
        }

        return text
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#39;');
    }

    escapeAttribute(text) {
        return this.escapeHtml(text).replace(/\n/g, ' ');
    }

    extractSuggestedDishes(rawContent) {
        if (!rawContent || this.availableDishes.length === 0) {
            return [];
        }

        const normalizedText = rawContent.toLowerCase();
        const matched = [];
        const seen = new Set();

        this.availableDishes.forEach(dish => {
            if (!dish.normalizedName) {
                return;
            }

            if (normalizedText.includes(dish.normalizedName)) {
                const key = String(dish.id);
                if (!seen.has(key)) {
                    seen.add(key);
                    matched.push(dish);
                }
            }
        });

        return matched;
    }

    appendSuggestedDishButtons(container, rawContent) {
        const matchedDishes = this.extractSuggestedDishes(rawContent);
        if (!matchedDishes.length) {
            return;
        }

        const actionsList = document.createElement('div');
        actionsList.className = 'ai-suggestion-actions-list';

        const title = document.createElement('div');
        title.className = 'ai-suggestion-actions-title';
        title.textContent = 'Thêm nhanh các món gợi ý:';
        actionsList.appendChild(title);

        matchedDishes.forEach(dish => {
            const row = document.createElement('div');
            row.className = 'ai-suggestion-actions';

            const priceLabel = dish.numericPrice !== null
                ? this.formatPrice(dish.numericPrice)
                : (dish.price ? this.escapeHtml(String(dish.price)) : null);

            if (priceLabel) {
                const priceSpan = document.createElement('span');
                priceSpan.className = 'ai-suggestion-price';
                priceSpan.textContent = `Giá: ${priceLabel}`;
                row.appendChild(priceSpan);
            }

            const button = document.createElement('button');
            button.type = 'button';
            button.className = 'add-to-cart-btn';
            button.dataset.dishId = dish.id;
            button.dataset.dishName = dish.name;
            button.textContent = '🛒 Thêm vào giỏ hàng';

            row.appendChild(button);
            actionsList.appendChild(row);
        });

        container.appendChild(actionsList);
    }

    async handleAddToCartClick(event) {
        const button = event.target.closest('.add-to-cart-btn');
        if (!button) {
            return;
        }

        const dishId = button.dataset.dishId;
        const dishName = button.dataset.dishName || '';

        if (!dishId) {
            return;
        }

        await this.addDishToCart(dishId, dishName, button);
    }

    async addDishToCart(dishId, dishName, button) {
        const originalText = button.dataset.originalText || button.textContent;
        button.dataset.originalText = originalText;
        button.disabled = true;
        button.textContent = 'Đang thêm...';

        try {
            const response = await fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8'
                },
                body: new URLSearchParams({
                    dishId: dishId,
                    quantity: 1
                })
            });

            const data = await response.json();

            if (data.success) {
                button.textContent = 'Đã thêm vào giỏ ✓';
                button.classList.add('added');

                setTimeout(() => {
                    button.classList.remove('added');
                    button.disabled = false;
                    button.textContent = originalText;
                }, 2500);

                return;
            }

            if (data.requiresLogin) {
                button.disabled = false;
                button.textContent = originalText;
                const message = data.message || 'Bạn cần đăng nhập để thêm món vào giỏ hàng.';
                const shouldRedirect = window.confirm(`${message}\nBạn có muốn đăng nhập ngay không?`);
                if (shouldRedirect && data.loginUrl) {
                    window.location.href = data.loginUrl;
                }
                return;
            }

            throw new Error(data.message || 'Không thể thêm món vào giỏ.');
        } catch (error) {
            console.error('Add to cart error:', error);
            button.disabled = false;
            button.textContent = originalText;
            window.alert(error.message || 'Không thể thêm món vào giỏ. Vui lòng thử lại.');
        }
    }

    showTyping() {
        this.typingIndicator.style.display = 'flex';
        this.scrollToBottom();
    }

    hideTyping() {
        this.typingIndicator.style.display = 'none';
    }

    scrollToBottom() {
        this.chatMessages.scrollTop = this.chatMessages.scrollHeight;
    }

    destroy() {
        document.removeEventListener('click', this.handleAddToCartClick);
    }
}

document.addEventListener('DOMContentLoaded', () => {
    const chatInstance = new AiChat();

    const backButton = document.getElementById('aiBackButton');
    if (backButton) {
        backButton.addEventListener('click', () => {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '/';
            }
        });
    }

    window.addEventListener('beforeunload', () => chatInstance.destroy());
});
</script>
