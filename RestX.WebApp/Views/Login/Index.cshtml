@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RestX - Login</title>
    <link rel="shortcut icon" type="image/png" href="~/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/css/login.mobile.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src="~/images/logos/dark-logo.svg" alt="RestX Logo" class="login-logo">
                <h1 class="login-title">Welcome Back</h1>
                <p class="login-subtitle">Restaurant Management System</p>
            </div>

            <div class="login-form">
                @if (ViewData["Error"] != null)
                {
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>@ViewData["Error"]</span>
                    </div>
                }

                <form asp-action="Index" asp-controller="Login" method="post" id="loginForm">
                    <div class="form-group">
                        <label for="username" class="form-label">Username</label>
                        <div class="input-group">
                            <i class="bi bi-person-fill input-icon"></i>
                            <input name="username" id="username" type="text" class="form-control"
                                   placeholder="Enter username" required autocomplete="username" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <input name="password" id="password" type="password" class="form-control"
                                   placeholder="Enter password" required autocomplete="current-password" />
                        </div>
                    </div>

                    <button type="submit" class="login-btn" id="loginBtn">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Sign In</span>
                    </button>
                </form>
            </div>

            <div class="powered-by">
                <i class="bi bi-shield-check"></i>
                <span>RestX System</span>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Focus effects
            $('.form-control').on('focus', function() {
                $(this).siblings('.input-icon').css('color', '#ff9800');
            });

            $('.form-control').on('blur', function() {
                $(this).siblings('.input-icon').css('color', '#666');
            });

            // Form submission
            $('#loginForm').on('submit', function() {
                $('#loginBtn').addClass('loading');
                $('#loginBtn span').text('Signing In...');
            });

            // Auto focus
            $('#username').focus();
        });
    </script>
</body>
</html>