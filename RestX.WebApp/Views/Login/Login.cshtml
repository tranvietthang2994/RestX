@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure this is correct
}

<link rel="stylesheet" href="~/css/staff.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-form-mobile">
        <div class="login-header">
            <img src="~/UpLoads/restaurant_logo.jpg" alt="Restaurant Logo" class="login-logo" />
            <h2>Welcome Back</h2>
            <p>Please sign in to continue</p>
        </div>

        <form asp-action="Login" method="post" class="mobile-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }
            <div class="form-group-mobile">
                <input name="username" class="form-control-mobile" placeholder="Username" required />
            </div>
            <div class="form-group-mobile">
                <input name="password" type="password" class="form-control-mobile" placeholder="Password" required />
            </div>
            <div class="form-group-mobile">
                <input type="submit" value="Login" class="btn-login-mobile" />
            </div>
        </form>
    </div>

    <div class="login-form-pc">
        <h1>Login</h1>
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger">@ViewData["Error"]</div>
                    }
                    <div class="form-group">
                        <label for="username" class="control-label">Username</label>
                        <input name="username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Password</label>
                        <input name="password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
